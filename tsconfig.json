{
    "compilerOptions": {
        "target": "es6",
        "jsx": "react",
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        
        "baseUrl": "./",
        "paths": {
            "App": ["src/App"],
            "Pages/*": ["src/Pages/*"],
        },
        "typeRoots": ["node_modules/@types", "src/typings"],
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
}